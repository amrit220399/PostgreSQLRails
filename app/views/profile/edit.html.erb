<div class="container">
<div class="card">
    <div class="card-panel hoverable">
      <div class="card-content">
        <h3>Edit Profile</h3>

<%= form_with  do |form| %>
<div class="row">
    <div class="input-field col s6 m6">
        <%= form.label :pic ,"Change your profile Image:" %><br/><br/>
        <%= form.file_field :pic %>
    </div>

    <div class="input-field col s6 m6">
         <%= image_tag("avatar.png", alt: "No profile picture", width: "120px", height: "120px") %>
    </div>

</div>

<div class="row">
    <div class="input-field col s12">
        <%= form.label :fname, "First Name" %><br/>
        <%= form.text_field :fname %>
    </div>
</div>

<div class="row">
    <div class="input-field col s12">
        <%= form.label :lname , "Last Name" %><br/>
        <%= form.text_field :lname %>
    </div>
</div>

<div class="row">
    <div class="input-field col s12">
        <%= form.label :dob , "Date of Birth" %><br/>
        <%= form.date_field :dob %>
    </div>
</div>

<div class="row">
    <div class="input-field col s12">
        <%= form.label :mobile , "Mobile" %><br/>
        <%= form.text_field :mobile, type: "number" %>
    </div>
</div>


<button class="btn waves-effect waves-light" type="submit" name="action"> 
    <%= form.submit "Update" , class: "white-text" %>
          <i class="material-icons right">send</i>
</button>


<% end %>
</div>
</div>
</div>
</div>
